{
  "name": "spaniel-sql",
  "version": "0.1.0",
  "description": "Type-safe TypeScript query builder for Cloud Spanner",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "bash -c 'shopt -s globstar && tsx --test test/**/*.test.ts'",
    "test:watch": "bash -c 'shopt -s globstar && tsx --test --watch test/**/*.test.ts'",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "keywords": [
    "cloud-spanner",
    "query-builder",
    "typescript",
    "sql"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/node": "^20.0.0",
    "fast-check": "^4.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*"
  ]
}
